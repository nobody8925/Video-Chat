<div class="row mt-5">
  <div class="dash col-md-6 m-auto">
    <div class="card card-body startCall">
      <!--Start Call-->
      <h1 class="text-center mb-3">
        Start a Video Call
      </h1>
      <form action="/video" method="GET">
        <button type="submit" class="btn btn-primary btn-block" id="start">Start</button>
      </form>
    </div>
    <div class="card card-body enterId">
      <!--Enter existing call-->
      <h1 class="text-center mb-3">
        Enter ID
      </h1>
      <form onsubmit="location.href='/' + document.getElementById('roomId').value; return false;" method="GET">
        <input
          type="id"
          id="roomId"
          name="roomId"
          class="form-control"
          placeholder="Enter Id"
          value="<%= typeof roomId != 'undefined' ? roomId : '' %>"
        />
        <button type="submit" class="btn btn-primary btn-block" id="enter">Enter</button>
      </form>
    </div>
  </div>
